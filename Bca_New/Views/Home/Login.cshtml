@model Bca_New.Models.Registers
@{
	Layout = null;
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://kit.fontawesome.com/yourcode.js" crossorigin="anonymous"></script>
<style type="text/css">
	

	#user {
		border: 1px solid dark;
		border-radius: 25px;
		padding: 10px 35px;
		margin-top: 30px;
	}

	input[type=text], input[type=password] {
		width: 100%;
		padding: 4px 10px;
		margin: 3px 0;
		display: inline-block;
		border: 3px solid black;
		box-sizing: border-box;
	}

	.placeicon {
		font-family: fontawesome; /*show the icon*/
	}
</style>

<body>
	<div class="container-fluid bg">
		<div class="row">
			<div class="col-md-4 col-sm-4 col-xs-12"></div>
			<div class="col-md- col-sm-4 col-xs-12">


				<form method="POST" asp-action="LogIncheck" asp-controller="Home" class="box shadow-lg bg-light mt-4">
					<h1 class="text-success ml-5">Login Form</h1>
					<br>
					<!--<img src="BCAFOURTH/images/img_avatar .png" class="avatar">-->

					<div class="form-group">
						<label class="font-weight-bold text-dark">Username</label>
						<input type="text" id="email" name="email" Placeholder="&#xf007; Enter your name..." class="form-control placeicon" required>
						<span id="Em" class="text-danger font-weight-bold"></span>
					</div>

					<div class="form-group">
						<label class="font-weight-bold text-dark">Password</label>
						<input type="Password" name="password" id="password" placeholder="&#xf023; Enter your password..." class="form-control placeicon" required>
						<span id="Pa" class="text-danger font-weight-bold"></span>
					</div>

					<div class="checkbox text-dark font-weight-bold">
						<label><input type="checkbox">Remember Me</label>
					</div>


					<input type="submit" name="submit" value="Login" class="btn btn-primary btn-block" /><br>
					<a href="#"><p class="ml-3 text-danger">FORGOT YOUR PASSWORD?</p></a>

					<p class="text-success">Don't have an Account?<a href="Use"><input type="button" class="btn btn-link font-weight-bold ml-5" value="Sign Up" /></a></p>

				</form>
			</div>
			<div class="col-md-4 col-sm-4 col-xs-12"></div>
		</div>
	</div>
</body>